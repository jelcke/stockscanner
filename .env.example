# IB Stock Scanner Environment Variables
# ======================================
# Copy this file to .env and fill in your values

# Interactive Brokers Connection
IB_HOST=127.0.0.1
IB_PORT=7497  # 7497 for paper, 7496 for live

# Redis Cache (optional)
REDIS_URL=redis://localhost:6379

# News API (for sentiment analysis)
# Get your API key from https://newsapi.org
NEWS_API_KEY=your_news_api_key_here

# Reddit API (for social sentiment)
# Create app at https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret

# Alpha Vantage (additional market data)
# Get key from https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_KEY=your_alpha_vantage_key

# Polygon.io (alternative market data)
# Get key from https://polygon.io
POLYGON_KEY=your_polygon_key

# Telegram Alerts (optional)
# Create bot with @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Email Alerts (optional)
EMAIL_PASSWORD=your_email_password

# Webhook URL (optional)
WEBHOOK_URL=https://your-webhook-url.com/alerts
WEBHOOK_SECRET=your_webhook_secret

# Database
DATABASE_URL=sqlite:///data/scanner.db

# Logging
LOG_LEVEL=INFO

# API Rate Limits (requests per minute)
NEWS_API_RATE_LIMIT=100
REDDIT_API_RATE_LIMIT=60

# ML Model Settings
MODEL_CONFIDENCE_THRESHOLD=0.65
ENABLE_ML_PREDICTIONS=true

# Performance
MAX_CONCURRENT_SYMBOLS=50
CACHE_TTL_SECONDS=300

# Security
API_SECRET_KEY=your_secret_key_for_internal_apis
ENCRYPT_SENSITIVE_DATA=true